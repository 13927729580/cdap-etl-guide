{
  "config": {
    "schedule": "*/5 * * * *",
    "stages": [
      {
        "name": "dbSource",
        "plugin": {
          "name": "Database",
          "type": "batchsource",
          "properties": {
            "importQuery": "select col1,col2,col3,col4 from my_table where $CONDITIONS",
            "splitBy": "col1",
            "boundingQuery": "select min(col1), max(col1) from my_table",
            "connectionString": "jdbc:postgresql://localhost:5432/testdb",
            "user": "postgres",
            "password": "",
            "jdbcPluginName": "postgres",
            "jdbcPluginType": "jdbc"
          }
        }
      },
      {
        "name": "hbaseSink",
        "plugin": {
          "name": "Table",
          "type": "batchsink",
          "properties": {
            "name": "hbase_postgres_table",
            "schema": "{\"type\":\"record\",\"name\":\"my_record\",\"fields\":[{\"name\":\"col1\",\"type\":\"int\"},{\"name\":\"col2\",\"type\":\"string\"},{\"name\":\"col3\",\"type\":\"string\"},{\"name\":\"col4\",\"type\":[\"double\",\"null\"]}]}",
            "schema.row.field": "col1"
          }
        }
      }
    ],
    "connections": [
      { "from": "dbSource", "to": "hbaseSink" }
    ]
  }
}
